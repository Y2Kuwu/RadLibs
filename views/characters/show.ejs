<%- include('../partials/header') %>


 <!-- PAGE NEEDS WORK -->



<section id="show-page">
    <div>Character: </div>
    <div><%= character.charSel %></div>
    <div>Name: </div>
    <div><%= character.main %></div>
    <div>Acc: </div>
    <div><%= character.charSet %></div>

    <!-- end cast list -->
</section>
<!-- add to cast form below this comment -->
<form id="add-acc" action="/character/<%= character._id %>/acc" method="POST">
    <select name="accId">
        <div><%= acc%></div>
    </select>
    <button type="submit">Add Acc</button>
</form>

<br><br>
<h2>Name</h2>

<% if (user) {%>
    <form id="add-a" method="POST" action="/character/<%= character._id %>/acc">
        <label>Accessory:</label>
        <textarea name="name"></textarea>
        <label>Name:</label>
        <select name="occupation">
        
        </select>
        <input type="submit" value="Add Acc">
    </form>
<%}%>

<% if (character.acc.length) { %>
    <table>
        <thead>
        <tr>
            <th>User</th>
            <th>Acc</th>
            <th>Occupation</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        <% let total = 0 %>
        <% character.acc.forEach(function(r) { %>
            <% total += r.rating %>
            <tr>
                <td class="review-user"><img src="<%= r.userAvatar %>"><%= r.userName %></td>
                <td><%= r.name %></td>
                <td><%= r.occupation %></td>
                <td>
                    <% if (user && user._id.equals(r.user)) { %>
                        <form action="/acc/<%= r._id %>?_method=DELETE" method="POST">
                            <button type="submit">X</button>
                        </form>
                    <% } %>
                </td>
            </tr>
        <% }); %>
        <tr>
            <td colspan="3"></td>
            <td><strong><%= (total / character.acc.length).toFixed(1) %></strong></td>
        </tr>
        </tbody>
    </table>
<% } else { %>
    <h5>No Name</h5>
<% } %>

